package bootcamp;

import java.util.Scanner;

public class Age {

	public static void main(String[] args) 
	{
		//initializing variables 
		int age;
		String name,gender;
		//read input values through scanner
		Scanner sc=new Scanner(System.in);
		//prompt the user for input values
		System.out.println("enter input values");
		name=sc.nextLine();
		//using split method to split the values
		String[] splitt=name.split(",");
		String n="";
		int a=0;
		String g="";
		for(int i=0;i<=2;i++)
		{
			n=splitt[0];
			a=Integer.parseInt(splitt[1]);
			g=splitt[2];
			
			
		}//end of for loop
		System.out.println("Name: " +n + " age: " +a+  " gender: " +g);
		

	}//end of main method

}//end of class block
